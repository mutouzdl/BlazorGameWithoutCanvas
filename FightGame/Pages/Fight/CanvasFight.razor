@page "/canvas"

@namespace FightGame

@using Blazor.Extensions
@using Blazor.Extensions.Canvas.Canvas2D
@using System.Drawing

<GraphicAssets />

<Layout>
	<Header>
		<div style="color: white;">
			战斗模块尝试 FPS: @_fps
		</div>
	</Header>
    <Content>
		<div class="bgDiv">
			<BECanvas  
				Width="@(_game == null ? 10 : _game.Display.Size.Width)" 
				Height="@(_game == null ? 10 : _game.Display.Size.Height)" 
				@ref="_canvas">
			</BECanvas>
		</div>
	</Content>
	<Footer>
		<div style="text-align: center;">
			<a href="http://www.benmutou.com">www.benmutou.com</a>
		</div>
	</Footer>
</Layout>
